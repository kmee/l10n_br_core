<odoo>

    <!-- Para Faturar-->
    <record model="ir.actions.act_window"
            id="action_l10n_br_sale_order_invoice">
        <field name="name">Venda para Faturar</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('invoice_status','=','to invoice')]</field>
    </record>
    <record model="ir.ui.menu" id="menu_l10n_br_sale_order_invoice">
        <field name="name">Venda para Faturar</field>
        <field name="parent_id" ref="sale.menu_sale_invoicing"/>
        <field name="action" ref="action_l10n_br_sale_order_invoice"/>
        <field name="sequence" eval="3"/>
    </record>
    <record model="ir.actions.act_window.view"
            id="l10n_br_sale_order_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sales_to_invoice_order_form_view"/>
        <field name="act_window_id"
               ref="action_l10n_br_sale_order_invoice"/>
    </record>
    <record model="ir.actions.act_window.view"
            id="l10n_br_sale_order_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sale.view_order_tree"/>
        <field name="act_window_id" ref="action_l10n_br_sale_order_invoice"/>
    </record>
    <!---->

    <!--Cotações-->
    <record model="ir.actions.act_window"
            id="action_l10n_br_sale_order_cotacao">
        <field name="name">Cotação</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','in',('draft','sent'))]</field>
    </record>
    <record model="ir.ui.menu" id="menu_l10n_br_sale_order_cotacao">
        <field name="name">Cotação</field>
        <field name="parent_id" ref="sales_team.menu_sales"/>
        <field name="action" ref="action_l10n_br_sale_order_cotacao"/>
        <field name="sequence" eval="3"/>
    </record>
    <record model="ir.actions.act_window.view"
            id="l10n_br_sale_order_cotacao_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sales_to_invoice_order_form_view"/>
        <field name="act_window_id" ref="action_l10n_br_sale_order_cotacao"/>
    </record>
    <record model="ir.actions.act_window.view"
            id="l10n_br_sale_order_cotacao_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sale.view_order_tree"/>
        <field name="act_window_id" ref="action_l10n_br_sale_order_cotacao"/>
    </record>
    <!---->

    <!--Ordens de Venda-->
        <record model="ir.actions.act_window"
                id="action_l10n_br_sale_order_ordens_venda">
        <field name="name">Ordens de Vendas</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('state','not in',('draft','sent'))]</field>
    </record>
    <record model="ir.ui.menu" id="menu_l10n_br_sale_order_ordens_venda">
        <field name="name">Ordens de Vendas</field>
        <field name="parent_id" ref="sales_team.menu_sales"/>
        <field name="action" ref="action_l10n_br_sale_order_ordens_venda"/>
        <field name="sequence" eval="4"/>
    </record>
    <record model="ir.actions.act_window.view"
            id="l10n_br_sale_order_ordens_venda_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sales_to_invoice_order_form_view"/>
        <field name="act_window_id" ref="action_l10n_br_sale_order_ordens_venda"/>
    </record>
    <record model="ir.actions.act_window.view"
            id="l10n_br_sale_order_ordens_venda_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sale.view_order_tree"/>
        <field name="act_window_id" ref="action_l10n_br_sale_order_ordens_venda"/>
    </record>
    <!---->

</odoo>

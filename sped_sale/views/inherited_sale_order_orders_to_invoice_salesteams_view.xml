<odoo>

    <record model="ir.actions.act_window" id="sale.action_orders_to_invoice_salesteams">
        <field name="name">Or√ßamentos</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form,calendar,graph</field>
        <field name="domain">[('state', '=', 'sale'),('invoice_status','=','to invoice')]</field>
        <field name="context">{
                'search_default_team_id': [active_id],
                'default_team_id': active_id,
            }
        </field>
        <field name="search_view_id" ref="sped_sale.sale_order_search" />
        <field name="tree_view_id" ref="sped_sale.sale_order_tree" />
    </record>

    <record model="ir.actions.act_window.view" id="sale_order_orders_to_invoice_salesteams_tree_action">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sped_sale.sale_order_tree"/>
        <field name="act_window_id" ref="sale.action_orders_to_invoice_salesteams"/>
    </record>

    <record model="ir.actions.act_window.view" id="sale_order_orders_to_invoice_salesteams_form_action">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sped_sale.sale_order_form"/>
        <field name="act_window_id" ref="sale.action_orders_to_invoice_salesteams"/>
    </record>

    <record model="ir.actions.act_window.view" id="sale_order_orders_to_invoice_salesteams_kanban_action">
        <field eval="3" name="sequence"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="sped_sale.sale_order_kanban"/>
        <field name="act_window_id" ref="sale.action_orders_to_invoice_salesteams"/>
    </record>

    <record model="ir.actions.act_window.view" id="sale_order_orders_to_invoice_salesteams_calendar_action">
        <field eval="4" name="sequence"/>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="sped_sale.sale_order_calendar"/>
        <field name="act_window_id" ref="sale.action_orders_to_invoice_salesteams"/>
    </record>

    <record model="ir.actions.act_window.view" id="sale_order_orders_to_invoice_salesteams_pivot_action">
        <field eval="5" name="sequence"/>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="sped_sale.sale_order_pivot"/>
        <field name="act_window_id" ref="sale.action_orders_to_invoice_salesteams"/>
    </record>

    <record model="ir.actions.act_window.view" id="sale_order_orders_to_invoice_salesteams_graph_action">
        <field eval="6" name="sequence"/>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="sped_sale.sale_order_graph"/>
        <field name="act_window_id" ref="sale.action_orders_to_invoice_salesteams"/>
    </record>

</odoo>

<odoo>

        <record model="ir.ui.view" id="sale_order_line_brazil_produto_form">
            <field name="name">sale.order.line.brazil.produto.form</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale_order_line_brazil_form"/>
            <field name="priority">99999</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                 <field name="quantidade_tributacao" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_brazilian','!=', True)]}</attribute>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="sale_order_line_brazil_produto_tree">
            <field name="name">sale.order.line.brazil.produto.tree</field>
            <field name="model">sale.order.line</field>
            <field name="priority">99999</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="produto_id"/>
                    <field name="quantidade"/>
                    <field name="vr_unitario"/>
                    <field name="vr_ipi" invisible="['|',('regime_tributario', '=', '1'),('modelo', 'in', ('SE', 'RL'))]"/>
                    <field name="vr_icms_st" />
                    <field name="vr_nf"/>
                </tree>
            </field>
        </record>

</odoo>

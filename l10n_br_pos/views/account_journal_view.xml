<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_l10n_br_pos_account_journal_form" model="ir.ui.view">
            <field name="name">l10n_br_pos_account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="point_of_sale.view_account_journal_pos_user_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_authorized_diff']" position="after">
                    <field name="sat_payment_mode"/>
                    <field name="sat_card_accrediting"/>
                    <field name="pagamento_funcionarios" />
                </xpath>
            </field>
        </record>

         <record id="view_pos_payment_term_account_journal_form" model="ir.ui.view">
            <field name="name">pos_payment_term_account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <notebook>
					<page string="Condições de Pagamento">
						<group>
							<field name="payment_term_ids"/>
						</group>
					</page>
				</notebook>
            </field>
        </record>

    </data>
</openerp>

<odoo>

    <record model="ir.ui.view" id="res_partner_form" >
        <field name="name">res.partner.form in (sped_imposto)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="product.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='employee']" position="after">
               <field name="cnae_id" colspan="4" options="{'no_open': True, 'no_create': True}" />
            </xpath>
            <xpath expr="//group[@name='sale']" position="inside">
                <field name="operacao_produto_id" string="Operação para venda de produtos" options="{'no_open': True, 'no_create': True}" />
                <field name="operacao_servico_id" string="Operação para venda de serviços" options="{'no_open': True, 'no_create': True}" />
            </xpath>
        </field>
    </record>

</odoo>

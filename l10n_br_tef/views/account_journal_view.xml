<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_l10n_br_tef_account_journal_form" model="ir.ui.view">
            <field name="name">l10n_br_tef_account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="l10n_br_pos.view_l10n_br_pos_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='pagamento_funcionarios']" position="after">
                    <field name="pagamento_tef"
                           attrs="{'invisible': [('sat_payment_mode', 'not in', ['03','04','10','11','13'])]}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>

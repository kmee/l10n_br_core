<odoo>

    <record model="ir.ui.view" id="sped_documento_emissao_nfce_inherited_form" >
        <field name="name">sped.documento.emissao.nfce.inherited.form</field>
        <field name="model">sped.documento</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="sped.sped_documento_emissao_nfce_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet[1]" position="before">
                <header>
                    <button name="envia_nfce" string="Enviar NF-e" type="object" class="btn-primary"
                        attrs="{'invisible': [('state_nfce', 'not in', ['em_digitacao', 'rejeitada'])]}" />
                </header>
            </xpath>
            <xpath expr="//field[@name='empresa_id']" position="before">
                <field name="state_nfce" readonly="1" colspan="4" string="Situação" />
            </xpath>
            <page name="financeiro" position="after">
                <page name="suporte" string="Suporte">
                    <group col="4">
                        <separator string="XML" colspan="4" />
                        <field name="arquivo_xml_id" colspan="4" string="NFC-e" />
                        <field name="arquivo_xml_autorizacao_id" colspan="4" string="Processo" />
                        <field name="arquivo_pdf_id" colspan="4" string="DANFCE" />
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record model="ir.ui.view" id="sped_documento_emissao_nfce_inherited_tree" >
        <field name="name">sped.documento.emissao.nfce.inherited.tree</field>
        <field name="model">sped.documento</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="sped.sped_documento_emissao_nfce_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree[1]" position="attributes">
                <!-- Muda a cor para:
                        muted (cinza): cancelada ou inutilizada, ou mercadoria não circulou ou não recebida
                        warning (marrom cocô): denegada
                        info (azul petróleo): aguardando envio para SEFAZ
                        primary (lilás/roxinho): aguardando resposta da SEFAZ
                        danger (vermelho): rejeitada
                        success (verde):
                -->
                <attribute name="decoration-warning">state_nfce == 'denegada' or situacao_fiscal == '04'</attribute>
                <attribute name="decoration-muted">state_nfce in ('cancelada', 'inutilizada') or situacao_fiscal in ('02', '03', '05', 'NC', 'MR')</attribute>
                <attribute name="decoration-info">state_nfce == 'a_enviar'</attribute>
                <attribute name="decoration-primary">state_nfce == 'enviada'</attribute>
                <attribute name="decoration-danger">state_nfce == 'rejeitada'</attribute>
            </xpath>
            <xpath expr="//field[@name='empresa_id']" position="before">
                <field name="state_nfce" string="Situação" />
            </xpath>
        </field>
    </record>

</odoo>
